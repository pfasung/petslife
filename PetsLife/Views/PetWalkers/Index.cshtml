@{
    ViewBag.Title = "Pet Walkers";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
}

<script src="~/ViewModels/api.js"></script>
<script src="~/ViewModels/PetWalkers/Index.js"></script>

<div class="row">
    <h2 style="text-align:center">Pet Walkers</h2>
</div>

<div class="row" data-bind="with: viewModel">
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">Register new Pet Walker</h2>
            </div>
            <div class="panel-body" data-bind="with: addPetWalkerViewModel">
                <form role="form" id="register">
                    <div class="form-group">
                        <label class="control-label" for="inpFirstName">First Name</label>
                        <input id="inpFirstName" type="text" class="form-control" data-bind="value: FirstName" data-val="true" data-val-required="The First Name is required." required="required"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="inpLastName">Last Name</label>
                        <input id="inpLastName" type="text" class="form-control" data-bind="value: LastName" data-val="true" data-val-required="The Last Name is required." required="required"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="inpEmailAddress">Email Address</label>
                        <input id="inpEmailAddress" type="email" class="form-control" data-bind="value: EmailAddress" required="required"/>
                        <span class="field-validation-valid text-danger" data-valmsg-for="EmailAddress" data-valmsg-replace="true"></span>
                    </div>
                    <div class="form-group">
                        <label for="inpPhoneNumber">Phone Number</label>
                        <input id="inpPhoneNumber" type="tel" class="form-control" data-bind="value: PhoneNumber" />
                    </div>
                </form>
                <input type="button" id="btnAddPetWalker" class="btn btn-primary" value="Add Pet Walker" data-bind="click: addPetWalker" />
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Registered Pet Walkers</h2>
            </div>
            <div class="panel-body" data-bind="with: petWalkerListViewModel">
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email Address</th>
                            <th>Phone Number</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody data-bind="foreach: petWalkers">
                        <tr>
                            <td data-bind="text: Id"></td>
                            <td data-bind="text: FirstName"></td>
                            <td data-bind="text: LastName"></td>
                            <td data-bind="text: EmailAddress"></td>
                            <td data-bind="text: PhoneNumber"></td>
                            <td>
                                <input type="button" class="btn btn-danger btn-xs" value="[x] delete" data-bind="click: $parent.removePetWalker" />
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br />

                <input type="button" class="btn btn-primary" id="btnGetPetWalkers" value="Refresh" data-bind="click: getPetWalkers" autofocus="autofocus"/>
            </div>
        </div>
    </div>
</div>

